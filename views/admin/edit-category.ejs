<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kategori Düzenle | Arda Gökay</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#DC2626',
                        secondary: '#991B1B', 
                        accent: '#F59E0B',
                        dark: '#0F172A',
                        light: '#1E293B'
                    }
                }
            }
        }
    </script>
</head>
<body class="bg-darker text-gray-300">
    <div class="flex h-screen">
        <!-- Sidebar -->
        <div class="w-64 bg-light border-r border-gray-700">
            <div class="p-6">
                <h2 class="text-2xl font-bold text-white">Arda Gökay</h2>
                <p class="text-sm text-gray-400">Admin Panel</p>
            </div>
            <nav class="mt-6">
                <a href="/admin" class="block py-3 px-6 text-gray-300 hover:bg-gray-700 hover:text-white transition-colors duration-300">
                    <i class="fas fa-tachometer-alt mr-3"></i>Dashboard
                </a>
                <a href="/admin/posts" class="block py-3 px-6 text-gray-300 hover:bg-gray-700 hover:text-white transition-colors duration-300">
                    <i class="fas fa-newspaper mr-3"></i>Yazılar
                </a>
                <a href="/admin/posts/new" class="block py-3 px-6 text-gray-300 hover:bg-gray-700 hover:text-white transition-colors duration-300">
                    <i class="fas fa-plus mr-3"></i>Yeni Yazı
                </a>
                <a href="/admin/categories" class="block py-3 px-6 bg-primary text-white">
                    <i class="fas fa-folder mr-3"></i>Kategoriler
                </a>
                <a href="/" class="block py-3 px-6 text-gray-300 hover:bg-gray-700 hover:text-white transition-colors duration-300">
                    <i class="fas fa-eye mr-3"></i>Siteyi Gör
                </a>
            </nav>
        </div>

        <!-- Main Content -->
        <div class="flex-1 p-8 overflow-y-auto">
            <div class="mb-8">
                <h1 class="text-3xl font-bold text-white">Kategoriyi Düzenle</h1>
                <p class="text-gray-400"><%= category.name %> - <%= category.slug %></p>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                <!-- Edit Form -->
                <div class="lg:col-span-2">
                    <div class="bg-light rounded-2xl shadow-xl border border-gray-700 p-8">
                        <form method="POST" action="/admin/categories/<%= category._id %>?_method=PUT" class="space-y-6">
                            <div class="space-y-2">
                                <label class="block text-white text-sm font-bold mb-2">Kategori Adı</label>
                                <input type="text" name="name" value="<%= category.name %>" 
                                       class="w-full px-4 py-3 bg-gray-800 border border-gray-700 rounded-xl focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent text-white placeholder-gray-400 transition-all duration-300"
                                       placeholder="Kategori adını girin"
                                       required
                                       oninput="updateSlugPreview(this.value)">
                                <p class="text-gray-400 text-sm mt-1">Kategori adı büyük harfle görünecektir</p>
                            </div>

                            <!-- Slug Preview -->
                            <div class="bg-gray-800 rounded-xl p-4 border border-gray-700">
                                <label class="block text-gray-400 text-sm font-bold mb-2">URL Önizleme</label>
                                <div class="flex items-center space-x-2 text-gray-300">
                                    <span class="text-sm">https://siteniz.com/category/</span>
                                    <span id="slugPreview" class="text-primary font-semibold"><%= category.slug %></span>
                                </div>
                                <p class="text-gray-400 text-xs mt-2">Mevcut URL: /category/<%= category.slug %></p>
                            </div>

                            <div class="flex gap-4 pt-6 border-t border-gray-700">
                                <button type="submit" class="bg-gradient-to-r from-primary to-secondary text-white px-8 py-3 rounded-xl hover:shadow-xl transition-all duration-300 font-medium flex items-center space-x-2">
                                    <i class="fas fa-save"></i>
                                    <span>Güncelle</span>
                                </button>
                                <a href="/admin/categories" class="bg-gray-700 text-white px-8 py-3 rounded-xl hover:bg-gray-600 transition-all duration-300 font-medium flex items-center space-x-2">
                                    <i class="fas fa-times"></i>
                                    <span>İptal</span>
                                </a>
                                <a href="/category/<%= category.slug %>" target="_blank" class="bg-green-600 text-white px-8 py-3 rounded-xl hover:bg-green-700 transition-all duration-300 font-medium flex items-center space-x-2">
                                    <i class="fas fa-external-link-alt"></i>
                                    <span>Görüntüle</span>
                                </a>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Category Info -->
                <div class="space-y-6">
                    <!-- Category Stats -->
                    <div class="bg-light rounded-2xl p-6 border border-gray-700">
                        <h3 class="text-lg font-bold text-white mb-4">Kategori Bilgileri</h3>
                        <div class="space-y-3">
                            <div class="flex justify-between items-center">
                                <span class="text-gray-400">Oluşturulma</span>
                                <span class="text-white font-semibold"><%= category.createdAt.toLocaleDateString('tr-TR') %></span>
                            </div>
                            <div class="flex justify-between items-center">
                                <span class="text-gray-400">Toplam Yazı</span>
                                <span class="text-primary font-semibold">0</span>
                            </div>
                            <div class="flex justify-between items-center">
                                <span class="text-gray-400">URL</span>
                                <span class="text-accent font-semibold text-sm">/<%= category.slug %></span>
                            </div>
                        </div>
                    </div>

                    <!-- Quick Actions -->
                    <div class="bg-light rounded-2xl p-6 border border-gray-700">
                        <h3 class="text-lg font-bold text-white mb-4">Hızlı İşlemler</h3>
                        <div class="space-y-3">
                            <a href="/admin/posts/new?category=<%= category.slug %>" class="w-full bg-gradient-to-r from-blue-600 to-blue-700 text-white p-3 rounded-xl hover:shadow-xl transition-all duration-300 flex items-center space-x-3 group">
                                <i class="fas fa-plus text-white"></i>
                                <span class="text-sm">Bu Kategoriye Yazı Ekle</span>
                            </a>
                            <a href="/category/<%= category.slug %>" target="_blank" class="w-full bg-gradient-to-r from-green-600 to-green-700 text-white p-3 rounded-xl hover:shadow-xl transition-all duration-300 flex items-center space-x-3 group">
                                <i class="fas fa-external-link-alt text-white"></i>
                                <span class="text-sm">Kategoriyi Görüntüle</span>
                            </a>
                            <form action="/admin/categories/<%= category._id %>?_method=DELETE" method="POST" class="w-full">
                                <button type="submit" 
                                        class="w-full bg-gradient-to-r from-red-600 to-red-700 text-white p-3 rounded-xl hover:shadow-xl transition-all duration-300 flex items-center space-x-3 group"
                                        onclick="return confirm('Bu kategoriyi silmek istediğinizden emin misiniz? Bu kategoriye ait tüm yazılar da silinecektir.')">
                                    <i class="fas fa-trash text-white"></i>
                                    <span class="text-sm">Kategoriyi Sil</span>
                                </button>
                            </form>
                        </div>
                    </div>

                    <!-- Category Icon -->
                    <div class="bg-light rounded-2xl p-6 border border-gray-700 text-center">
                        <div class="w-20 h-20 mx-auto mb-4 bg-gradient-to-r from-primary to-accent rounded-2xl flex items-center justify-center">
                            <i class="fas <%= getCategoryIcon(category.name) %> text-white text-2xl"></i>
                        </div>
                        <p class="text-white font-semibold"><%= category.name %></p>
                        <p class="text-gray-400 text-sm mt-1">Kategori İkonu</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        function updateSlugPreview(categoryName) {
            const slugPreview = document.getElementById('slugPreview');
            if (categoryName.trim() === '') {
                slugPreview.textContent = '<%= category.slug %>';
                return;
            }
            
            // Convert to slug
            let slug = categoryName
                .toLowerCase()
                .replace(/ /g, '-')
                .replace(/[şşıİ]/g, 's')
                .replace(/[ç]/g, 'c')
                .replace(/[ğ]/g, 'g')
                .replace(/[ü]/g, 'u')
                .replace(/[ö]/g, 'o')
                .replace(/[ı]/g, 'i')
                .replace(/[^a-z0-9-]/g, '');
            
            slugPreview.textContent = slug;
        }

        function getCategoryIcon(categoryName) {
            const icons = {
                'psikoloji': 'fa-brain',
                'bilim': 'fa-atom',
                'felsefe': 'fa-book',
                'din': 'fa-pray',
                'mitoloji': 'fa-dragon'
            };
            return icons[categoryName.toLowerCase()] || 'fa-folder';
        }

        // Initialize slug preview
        document.addEventListener('DOMContentLoaded', function() {
            updateSlugPreview('<%= category.name %>');
        });
    </script>
</body>
</html>