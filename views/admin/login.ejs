<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Giriş | Arda Gökay</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#DC2626',
                        secondary: '#991B1B', 
                        accent: '#F59E0B',
                        dark: '#0F172A',
                        light: '#1E293B'
                    }
                }
            }
        }
    </script>
    <style>
        .login-bg {
            background: linear-gradient(135deg, #0F172A 0%, #1E1B4B 50%, #0F172A 100%);
        }
        .glass-effect {
            background: rgba(15, 23, 42, 0.9);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(220, 38, 38, 0.3);
            box-shadow: 0 25px 50px rgba(0, 0, 0, 0.5);
        }
        .particles {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
        }
        .particle {
            position: absolute;
            width: 2px;
            height: 2px;
            background: #DC2626;
            border-radius: 50%;
            animation: particleFloat 8s infinite linear;
        }
        @keyframes particleFloat {
            0% { transform: translateY(100vh) rotate(0deg); opacity: 0; }
            10% { opacity: 1; }
            90% { opacity: 1; }
            100% { transform: translateY(-100px) rotate(360deg); opacity: 0; }
        }
    </style>
</head>
<body class="login-bg min-h-screen flex items-center justify-center p-4 font-sans">
    <!-- Animated Background -->
    <div class="particles" id="particles"></div>

    <!-- Login Container -->
    <div class="glass-effect rounded-2xl p-8 w-full max-w-md border border-primary border-opacity-30 relative overflow-hidden">
        <!-- Animated Background Pattern -->
        <div class="absolute inset-0 opacity-5">
            <div class="absolute top-10 left-10 w-20 h-20 bg-primary rounded-full"></div>
            <div class="absolute bottom-10 right-10 w-16 h-16 bg-accent rounded-full"></div>
            <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-24 h-24 bg-primary rounded-full"></div>
        </div>

        <!-- Logo -->
        <div class="text-center mb-8 relative z-10">
            <div class="w-24 h-24 mx-auto mb-4 bg-gradient-to-r from-primary to-accent rounded-2xl flex items-center justify-center shadow-2xl">
                <i class="fas fa-brain text-white text-3xl"></i>
            </div>
            <h1 class="text-4xl font-bold text-white mb-2">Arda Gökay</h1>
            <p class="text-gray-400 text-lg">Admin Panel Giriş</p>
        </div>

        <!-- Login Form -->
        <form method="POST" action="/admin/login" class="space-y-6 relative z-10">
            <% if(typeof error !== 'undefined') { %>
            <div class="bg-red-500 bg-opacity-20 border border-red-500 text-red-300 px-4 py-3 rounded-xl flex items-center space-x-2">
                <i class="fas fa-exclamation-triangle"></i>
                <span>Kullanıcı adı veya şifre hatalı!</span>
            </div>
            <% } %>

            <!-- Username Field -->
            <div class="space-y-2">
                <label class="block text-white text-sm font-semibold">Kullanıcı Adı</label>
                <div class="relative">
                    <input type="text" name="username" class="w-full px-4 py-4 bg-gray-800 border border-gray-700 rounded-xl focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent text-white placeholder-gray-400 pl-12 transition-all duration-300" 
                           placeholder="admin" required value="<%= typeof username !== 'undefined' ? username : '' %>">
                    <i class="fas fa-user absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                </div>
            </div>

            <!-- Password Field -->
            <div class="space-y-2">
                <label class="block text-white text-sm font-semibold">Şifre</label>
                <div class="relative">
                    <input type="password" name="password" id="password" class="w-full px-4 py-4 bg-gray-800 border border-gray-700 rounded-xl focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent text-white placeholder-gray-400 pl-12 pr-12 transition-all duration-300" 
                           placeholder="Şifrenizi girin" required>
                    <i class="fas fa-lock absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                    <button type="button" onclick="togglePassword()" class="absolute right-4 top-1/2 transform -translate-y-1/2 text-gray-400 hover:text-primary transition-colors duration-300">
                        <i class="fas fa-eye" id="eye-icon"></i>
                    </button>
                </div>
            </div>

            <!-- Login Button -->
            <button type="submit" class="w-full bg-gradient-to-r from-primary to-secondary text-white py-4 px-6 rounded-xl hover:shadow-2xl transition-all duration-300 font-semibold text-lg border border-primary border-opacity-30 transform hover:scale-105">
                <i class="fas fa-sign-in-alt mr-2"></i>Giriş Yap
            </button>
        </form>

        <!-- Footer Info -->
        <div class="mt-6 text-center relative z-10">
            <p class="text-gray-400 text-sm">
                Kullanıcı Adı: <span class="text-accent font-semibold">admin</span><br>
                Şifre: <span class="text-accent font-semibold">Arda123.</span>
            </p>
            <div class="mt-4 pt-4 border-t border-gray-700">
                <a href="/" class="text-gray-400 hover:text-primary transition-colors duration-300 text-sm">
                    <i class="fas fa-arrow-left mr-1"></i>Siteye Dön
                </a>
            </div>
        </div>
    </div>

    <script>
        // Create animated particles
        function createParticles() {
            const particlesContainer = document.getElementById('particles');
            const particleCount = 30;
            
            for (let i = 0; i < particleCount; i++) {
                const particle = document.createElement('div');
                particle.className = 'particle';
                particle.style.left = Math.random() * 100 + 'vw';
                particle.style.animationDelay = Math.random() * 8 + 's';
                particle.style.animationDuration = (Math.random() * 10 + 5) + 's';
                particlesContainer.appendChild(particle);
            }
        }

        // Toggle password visibility
        function togglePassword() {
            const passwordInput = document.getElementById('password');
            const eyeIcon = document.getElementById('eye-icon');
            
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                eyeIcon.classList.remove('fa-eye');
                eyeIcon.classList.add('fa-eye-slash');
            } else {
                passwordInput.type = 'password';
                eyeIcon.classList.remove('fa-eye-slash');
                eyeIcon.classList.add('fa-eye');
            }
        }

        // Add focus effects
        document.addEventListener('DOMContentLoaded', function() {
            createParticles();
            
            const inputs = document.querySelectorAll('input');
            inputs.forEach(input => {
                input.addEventListener('focus', function() {
                    this.parentElement.classList.add('ring-2', 'ring-primary');
                });
                input.addEventListener('blur', function() {
                    this.parentElement.classList.remove('ring-2', 'ring-primary');
                });
            });
        });

        // Add enter key support
        document.addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                document.querySelector('form').submit();
            }
        });
    </script>
</body>
</html>